#!/usr/bin/env bash

. dockerinit

sudo ifconfig lo0 alias $docker_host_ip/24
export DOCKER_HOST_IP=$docker_host_ip

# argument exists
if [ ! -z "$1" ]
then
    # set containers to the desired
    containers="$@"
fi

# go to laradock directory
cd laradock

# start up container(s)
docker-compose up -d $containers